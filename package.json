{
  "name": "figma-to-mcp-pipeline",
  "version": "1.0.0",
  "description": "Figma to Code MCP Pipeline - Extract design system components from Figma and expose via MCP server",
  "main": "index.js",
  "scripts": {
    "extract": "tsx scripts/full-pipeline.ts",
    "sync": "tsx scripts/sync-from-figma.ts",
    "server": "node dist/mcp-server/server.js",
    "dev:server": "tsx --watch mcp-server/server.ts",
    "build": "tsc",
    "dev": "tsx --watch scripts/full-pipeline.ts",
    "add-component": "tsx scripts/add-manual-component.ts",
    "update-docs": "cp -r components/ui docs/components/ && cp -r content/components docs/content/",
    "test:validate": "tsx scripts/validate-component-json.ts",
    "test:prompts": "tsx scripts/test-prompts.ts",
    "test:mcp": "tsx scripts/test-mcp.ts",
    "test": "npm run test:validate Button && npm run test:prompts Button && npm run test:mcp"
  },
  "keywords": [
    "figma",
    "design-system",
    "mcp",
    "react",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.3",
    "figma-api": "^1.11.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
